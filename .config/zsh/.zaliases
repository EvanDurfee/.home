## Common aliases

# Enable colors
alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -Al'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Better cp for COW supporting filesystems
alias cp='cp --reflink=auto'

# Enable alias expansion when using sudo
alias sudo='sudo '

# Exa
alias x='exa --all --long --header --group --group-directories-first'
alias xt='x --tree'

# saner defaults
#alias cp="cp -i"                                                # Confirm before overwriting something
#alias df='df -h'                                                # Human-readable sizes
#alias free='free -m'                                            # Show sizes in MB

alias userctl='systemctl --user'

alias cfg='/bin/git --git-dir=$HOME/.home/ --work-tree=$HOME'

alias k='kubectl'
alias d='docker'
alias h='helm'

# Restic backups
alias mikoshi-ctl='sudo restic \
    --password-file /home/evan/.config/restic/password.txt \
    -r sftp::/data/souls/evan/Backups/silver \
    -o sftp.command="ssh -i /home/evan/.ssh/id_rsa evan@mikoshi.edurfee.com -s sftp"'

alias mikoshi-backup='mikoshi-ctl \
    backup \
    --one-file-system \
    --exclude-file=/home/evan/.config/restic/excludes.txt \
	/vol/userdata /home / '
