[diff]
	tool = kdiff3
[merge]
	tool = kdiff3
[difftool]
	prompt = false
[alias]
	hist = log --pretty=format:'%C(auto)%h %ad | %s%d [%an]' --graph --date=short
	st = status
[color]
	ui = auto
[core]
	autocrlf = input
	pager = type delta >/dev/null 2>&1 && exec delta || exec less -FR
	editor = nano -b -r 72
[init]
	defaultBranch = master
[pull]
	ff = only
[delta]
	features = evan
	line-numbers = true
	side-by-side = false
[delta "evan"]
	minus-style = red bold
	plus-style = green bold
